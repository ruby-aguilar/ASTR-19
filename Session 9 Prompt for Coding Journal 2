   ]
  },
  {
   "cell_type": "code",
   "execution_count": null,
   "id": "bd32277c-1d44-4d8a-b6ff-8bdea4a066d8",
   "metadata": {},
   "outputs": [],
   "source": [
    "width = 0.5\n",
    "histmin = np.floor(min(x))\n",
    "histmax = np.ceil(max(x)) + width\n",
    "\n",
    "plt.hist(x, bins = 100, alpha = 0.5, edgecolor = 'black')\n",
    "plt.xlabel('n per bin')\n",
    "plt.ylabel('x')\n",
    "\n",
    "plt.savefig('session_3_of_coding_journal_2.pdf', bbox_inches = 'tight', facecolor = 'white')"
